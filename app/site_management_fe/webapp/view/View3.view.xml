<mvc:View
    controllerName="com.trl.sitemanagementfe.controller.View3"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        showHeader="true"
        class="sapUiContentPadding sitePageBackground"
    >
        <!-- ========== HEADER ========== -->
        <customHeader>
            <Bar class="headerBarFix">
                <contentLeft>
                    <Image
                        src="/images/logo.png"
                        height="40px"
                        class="siteLogo"
                    />
                </contentLeft>
                <contentMiddle>
                    <HBox
                        width="90%"
                        justifyContent="Center"
                    >
                        <Text
                            text="TEMPERATURE"
                            class="siteHeaderTitle"
                        />
                    </HBox>
                </contentMiddle>
            </Bar>
        </customHeader>

        <!-- DATE / TIME / SHIFT ROW -->
        <HBox
            width="100%"
            justifyContent="SpaceBetween"
            class="sapUiSmallMarginBottom"
            wrap="Wrap"
        >
            <VBox
                width="300px"
                justifyContent="Start"
            >
                <Label text="Site ID" />
                <Input
                    id="siteId"
                    change=".onSiteIdChange"
                    placeholder="Enter Site ID"
                />
            </VBox>
            <ToolbarSpacer />
            <VBox justifyContent="End">
                <Label text="SHIFT" />
                <Select
                    selectedKey="{formData>/shift}"
                    forceSelection="true"
                    editable="true"
                      id="shiftSelect"
                >
                    <items>
                        <core:Item
                            key="A"
                            text="A"
                        />
                        <core:Item
                            key="B"
                            text="B"
                        />
                        <core:Item
                            key="C"
                            text="C"
                        />
                    </items>
                </Select>
            </VBox>
        </HBox>

        <!-- GENERAL INFORMATION PANEL (READ-ONLY) -->
        <Panel
            headerText="General Information"
            class="whiteCard"
        >
            <layout:Grid
                defaultSpan="L3 M4 S12"
                hSpacing="2"
                vSpacing="1"
            >
                <VBox>
                    <Label text="Runner ID" />
                    <Input
                        value="{formData>/runnerId}"
                        editable="false"
                    />
                </VBox>

                <VBox>
                    <Label text="Campaign No" />
                    <Input
                        value="{formData>/campaignNo}"
                        editable="false"
                    />
                </VBox>

                <VBox>
                    <Label text="Repair Status" />
                    <Input
                        value="{formData>/repairStatus}"
                        editable="false"
                    />
                </VBox>

                <VBox>
                    <Label text="Minor Repair Status" />
                    <Input
                        value="{formData>/minorRepairStatus}"
                        editable="false"
                    />
                </VBox>
            </layout:Grid>
        </Panel>

        <!-- DYNAMIC PRODUCTION LINES -->
        <VBox
            id="linesContainer"
            class="sapUiMediumMargin"
        />

        <!-- ========== ACTION BUTTONS ========== -->
        <HBox
            class="actionBar"
            style="margin-top:1rem;"
            justifyContent="SpaceBetween"
        >
            <!-- Left side -->
            <Button
                text="Submit"
                type="Success"
                press=".onSubmit"
                class="sapUiTinyMarginBegin"
                visible="{formData>/isSensorEditable}"
            />

            <!-- Spacer pushes next content to right -->
            <ToolbarSpacer />

            <!-- Right side -->
            <Button
                text="Save as Draft"
                type="Emphasized"
                press=".onSave"
                class="sapUiTinyMarginBegin"
                visible="{formData>/isSensorEditable}"
            />
        </HBox>
    </Page>
</mvc:View>
