<mvc:View
    controllerName="com.trl.sitemanagementfe.controller.Report"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
>
    <Page
        showHeader="true"
        class="sapUiContentPadding sitePageBackground"
    >
        <!-- ========== HEADER ========== -->
        <customHeader>
            <Bar class="headerBarFix">
                <contentLeft>
                    <Image
                        src="/images/logo.png"
                        height="40px"
                        class="siteLogo"
                    />
                </contentLeft>
                <contentMiddle>
                    <HBox
                        width="90%"
                        justifyContent="Center"
                    >
                        <Text
                            text="REPORTS"
                            class="siteHeaderTitle"
                        />
                    </HBox>
                </contentMiddle>
            </Bar>
        </customHeader>
        <Button
            text=""
            type="Back"
            press=".onNavToHome"
        />

        <!-- HEADER -->

        <!-- Search Field -->
        <Panel
            headerText="Search "
            class="whiteCard"
            expandable="false"
        >
            <content>
                <HBox
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignItems="End"
                    wrap="Wrap"
                >
                    <!-- Site ID -->
                    <VBox width="25%">
                        <Label
                            text="Site ID"
                            required="true"
                        />
                        <Input
                            id="siteId"
                            placeholder="Enter Site ID"
                            showValueHelp="true"
                            liveChange="onSiteIdLiveChange"
                            valueHelpRequest="onSiteIdValueHelp"
                        />
                    </VBox>
                    <VBox width="25%">
                        <Label
                            text="Runner"
                            required="true"
                        />
                        <Input
                            id="ProductionLineId1"
                            placeholder="Enter Runner"
                            showValueHelp="true"
                            liveChange="onProdLineLiveChange"
                            valueHelpRequest="onProdLineValueHelp"
                        />
                    </VBox>

                    <!-- From Date -->
                    <VBox width="15%">
                        <Label
                            text="From Date"
                            required="true"
                        />
                        <DatePicker
                            id="fromDate"
                            width="100%"
                            valueFormat="yyyy-MM-dd"
                            displayFormat="dd-MM-yyyy"
                        />
                    </VBox>

                    <!-- To Date -->
                    <VBox width="15%">
                        <Label
                            text="To Date"
                            required="true"
                        />
                        <DatePicker
                            id="toDate"
                            width="100%"
                            valueFormat="yyyy-MM-dd"
                            displayFormat="dd-MM-yyyy"
                        />
                    </VBox>

                    <!-- Find Button -->
                    <!-- <VBox width="8%">
                        <Label text=" " />
                        <Button
                            text="Find"
                            type="Emphasized"
                            width="100%"
                            press="onFindPressDailyProduction"
                        />
                    </VBox> -->

                    <!-- <VBox
                        id="tableContainer"
                        width="100%"
                        class="sapUiSmallMarginTop"
                    /> -->
                </HBox>
            </content>
        </Panel>

        <!-- HOUSE / PRODUCTION LINE 1 REPORT -->
        <Panel
            headerText="Daily Wise - Production Data"
            class="whiteCard"
            expandable="true"
        >
            <content>
                <!-- Side-by-side layout -->
                <HBox
                    width="100%"
                    alignItems="Center"
                    justifyContent="Start"
                    class="sapUiSmallMarginBottom"
                >
                    <!-- Button (LEFT) -->
                    <VBox
                        width="20%"
                        class="sapUiSmallMarginEnd"
                    >
                        <Button
                            text="Find Production Data"
                            type="Success"
                            width="100%"
                            press="onFindPressDailyProduction"
                        />
                    </VBox>

                    <!-- Red Info Message (RIGHT) -->
                    <VBox width="80%">
                        <tnt:InfoLabel
                            text="Required fields: Site ID, From Date, and To Date"
                            colorScheme="1"
                        />
                    </VBox>
                </HBox>

                <!-- Table Container -->
                <VBox
                    id="tableContainer"
                    width="100%"
                    class="sapUiSmallMarginTop"
                />
            </content>
        </Panel>

        <!-- Daily Wise Temperature Data -->

        <Panel
            headerText="Daily Wise - Temperature Data"
            class="whiteCard"
            expandable="true"
        >
            <content>
                <HBox
                    width="100%"
                    alignItems="Center"
                    justifyContent="Start"
                    class="sapUiSmallMarginBottom"
                >
                    <!-- Find Button -->
                    <VBox
                        width="20%"
                        class="sapUiSmallMarginEnd"
                    >
                        <Button
                            text="Find Temperature Data"
                            type="Success"
                            width="100%"
                            press="onFindPressDailyTemperature"
                        />
                    </VBox>

                    <!-- Red Info Label -->
                    <VBox width="80%">
                        <tnt:InfoLabel
                            text="Required fields: Site ID, Runner , From Date, and To Date"
                            colorScheme="1"
                        />
                    </VBox>
                </HBox>

                <!-- Table / Chart Container -->
                <VBox
                    id="temperatureTableContainer"
                    width="100%"
                    class="sapUiSmallMarginTop"
                />
            </content>
        </Panel>

        <!-- PLACEHOLDER FOR MORE LINES -->
        <VBox
            id="reportLinesContainer"
            width="100%"
        />
    </Page>
</mvc:View>
